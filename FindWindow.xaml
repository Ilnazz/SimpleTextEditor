<Window x:Class="TextEditor.FindWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="FindWindow" Height="120" Width="300"
        >
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0 5 5 0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" Margin="10 0">
            <TextBox x:Name="SearchField" Margin="0 20"/>
            <CheckBox x:Name="IsRegister" Content="С учётом регистра"/>
        </StackPanel>
        
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
            <Button Name="Next" Content="Найти далее"/>
            <Button x:Name="Cancel" Content="Отмена"/>
        </StackPanel>
        
    </Grid>
</Window>
