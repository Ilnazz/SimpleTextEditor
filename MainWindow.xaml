<Window x:Class="TextEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu Height="25" VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Создать" />
                <MenuItem Header="Новое окно" />
                <MenuItem Header="Открыть" />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Сохранить как" />
                <Separator />
                <MenuItem Header="Параметры страницы" />
                <MenuItem Header="Печать" />
                <Separator />
                <MenuItem Header="Выйти" />
            </MenuItem>
            <MenuItem Header="Изменить" >
                <MenuItem Header="Отменить" />
                <Separator />
                <MenuItem Header="Вырезать" />
                <MenuItem Header="Копировать" />
                <MenuItem Header="Вставить" />
                <MenuItem Header="Удалить" />
                <Separator />
                <MenuItem Header="Найти..." />
                <MenuItem Header="Найти далее" />
                <MenuItem Header="Найти ранее" />
                <MenuItem Header="Заменить..." />
                <MenuItem Header="Перейти..." />
                <Separator />
                <MenuItem Header="Выделить все" />
            </MenuItem>
            <MenuItem Header="Просмотр" >
                <MenuItem Header="Масштаб">
                    <MenuItem Header="Увеличить" />
                    <MenuItem Header="Уменьшить" />
                    <MenuItem Header="Восстановить масштаб по умолчанию" />
                </MenuItem>
                <MenuItem Header="Строка состояния" />
            </MenuItem>
        </Menu>
        <TextBox x:Name="TB" Grid.Row="1" KeyDown="TB_KeyDown">
            
        </TextBox>
        <StackPanel Grid.Row="2">
            
        </StackPanel>
    </Grid>
</Window>
